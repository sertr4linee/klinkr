{
  "name": "ai-app-builder",
  "displayName": "AI App Builder - Local Control Panel",
  "description": "Local AI App Builder with Next.js panel to control GitHub Copilot models",
  "version": "0.1.0",
  "publisher": "moneyprinter",
  "repository": {
    "type": "git",
    "url": "https://github.com/moneyprinter/ai-app-builder"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiAppBuilder.openPanel",
        "title": "AI App Builder: Open Control Panel",
        "icon": "$(tools)"
      },
      {
        "command": "aiAppBuilder.listModels",
        "title": "AI App Builder: List Available Models"
      },
      {
        "command": "aiAppBuilder.changeModel",
        "title": "AI App Builder: Change Active Model"
      },
      {
        "command": "aiAppBuilder.processStats",
        "title": "AI App Builder: Show Process Statistics"
      },
      {
        "command": "aiAppBuilder.showSidebar",
        "title": "AI App Builder: Show Sidebar"
      },
      {
        "command": "aiAppBuilder.startPanel",
        "title": "AI App Builder: Start Panel",
        "icon": "$(play)"
      },
      {
        "command": "aiAppBuilder.stopPanel",
        "title": "AI App Builder: Stop Panel",
        "icon": "$(stop)"
      },
      {
        "command": "aiAppBuilder.restartPanel",
        "title": "AI App Builder: Restart Panel",
        "icon": "$(refresh)"
      },
      {
        "command": "aiAppBuilder.showPanelLogs",
        "title": "AI App Builder: Show Panel Logs",
        "icon": "$(output)"
      },
      {
        "command": "aiAppBuilder.clearPanelLogs",
        "title": "AI App Builder: Clear Panel Logs"
      },
      {
        "command": "aiAppBuilder.panelQuickActions",
        "title": "AI App Builder: Panel Quick Actions"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiAppBuilder",
          "title": "AI App Builder",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "aiAppBuilder": [
        {
          "type": "webview",
          "id": "aiAppBuilder.panel",
          "name": "Builder Panel"
        }
      ]
    },
    "chatParticipants": [
      {
        "id": "ai-app-builder.builder",
        "name": "builder",
        "fullName": "AI App Builder",
        "description": "Bridge to AI App Builder web panel - captures responses and streams to your panel",
        "isSticky": true
      }
    ],
    "configuration": {
      "title": "AI App Builder",
      "properties": {
        "aiAppBuilder.serverPort": {
          "type": "number",
          "default": 57129,
          "description": "Port for the local AI App Builder server (WebSocket)"
        },
        "aiAppBuilder.autoOpen": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open the panel in browser on activation"
        },
        "aiAppBuilder.panelPort": {
          "type": "number",
          "default": 3001,
          "description": "Port for the Next.js panel"
        },
        "aiAppBuilder.panelAutoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start the panel when the extension activates"
        },
        "aiAppBuilder.panelMode": {
          "type": "string",
          "enum": ["development", "production"],
          "default": "development",
          "enumDescriptions": [
            "Run 'npm run dev' for hot reload during development",
            "Run 'npm run start' with pre-built files for production"
          ],
          "description": "Panel mode: development (hot reload) or production (pre-built)"
        },
        "aiAppBuilder.panelPath": {
          "type": "string",
          "default": "",
          "description": "Custom path to the www folder (leave empty for auto-detection)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/babel__generator": "^7.27.0",
    "@types/babel__traverse": "^7.28.0",
    "@types/express": "^4.17.21",
    "@types/http-proxy-middleware": "^0.19.3",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.95.0",
    "@types/ws": "^8.5.10",
    "@vscode/vsce": "^3.2.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@babel/generator": "^7.28.5",
    "@babel/parser": "^7.28.5",
    "@babel/traverse": "^7.28.5",
    "@babel/types": "^7.28.5",
    "express": "^4.18.2",
    "http-proxy-middleware": "^3.0.5",
    "ws": "^8.16.0"
  }
}
